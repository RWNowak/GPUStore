@model GPUStoreMVC.Models.Other.Login
@{
    Layout = "_LayoutClean";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/authorisation.css">
</head>
    <body>
        <div class="login-container">
            <form class="w-40" asp-action="Login" method="post">
        <h1>Welcome Back!</h1>
        <h2>Sign in into your account</h2>
        <div class="input-container">
            <label asp-for="Username" class="w-40">Username</label>
            <input type="text" class="input" asp-for="Username">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Username"></span>
        </div>


        <div class="input-container">
            <label asp-for="Password" class="w-40">Password</label>
            <input type="password" class="input" asp-for="Password">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Password"></span>
        </div>


        @if (TempData["msg"] != null)
        {
            <div class="alert mb-1">
                @TempData["msg"]
            </div>
        }

        <div class="input-container">
            <button class="btn btn-default" type="submit">Login</button>
            
        </div>
            </form>
        </div>
    </body>
</html>