@model GPUStoreMVC.Models.Other.Registration
@{
    Layout = "_LayoutClean";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/authorisation.css">
</head>
    <body>
    <div class="login-container">
        <form class="w-100" asp-action="Register" method="post">
            <h1>Sign up to GPUStore</h1>
            <div class="input-container">
                <label asp-for="Username" class="w-100">Username</label>
                <input type="text" class="input" asp-for="Username">
            </div>
            <div class="input-container">
                <label asp-for="Password" class="w-100">Password</label>
                <input type="password" class="input" asp-for="Password">
            </div>
            <div class="input-container">
                <button class="btn btn-default" type="submit">Login</button>
                <div class="button-container">
                    <a href="#" class="small-link">Don't have an account? Sign Up</a>
                    <a href="#" class="small-link back-button">Back</a>
                </div>
            </div>
        </form>
    </div>
    </body>
</html>