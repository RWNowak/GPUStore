@model GPUStoreMVC.Models.Data.GPU
@{
}

<form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Edit GPU</h2>
    <input type="hidden" class="input" asp-for="GPUID">
    <input type="hidden" class="input" asp-for="GPUImage">
    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Price" class="w-40">Price</label>
        <input type="number" class="input" asp-for="Price">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Price"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseDate" class="w-40">ReleaseDate</label>
        <input type="date" class="input" asp-for="ReleaseDate">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseDate"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Chip" class="w-40">Chip</label>
        <input type="text" class="input" asp-for="Chip">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Chip"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Memory" class="w-40">Memory</label>
        <input type="text" class="input" asp-for="Memory">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Memory"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Bus" class="w-40">Bus</label>
        <input type="text" class="input" asp-for="Bus">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Bus"> </span>
    </div>

